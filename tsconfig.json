{
    "compilerOptions": {
      "esModuleInterop": true,
      "lib": ["es2019", "dom"],
      "module": "commonjs",
      "target": "es2019",
      "declaration": true,
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "noUnusedParameters": false,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "lib",
      "resolveJsonModule": true,
    },
    "include": ["./hardhat.config.ts", "index.ts", "types", "test", "tasks", "utils", "chain"],
    "exclude": ["lib", "temp"]
  }
  